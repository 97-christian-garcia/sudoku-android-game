<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.christian.supersurgedsudoku.MainMenu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Super Surged Sudoku"
        android:id="@+id/txtTitleScreen"
        android:fontFamily="casual"
        android:typeface="sans"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp" />

    <Button
        android:text="Sudoku Rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTimeScore"
        android:layout_below="@+id/btnPlayGame"
        android:layout_marginTop="55dp"
        android:layout_alignEnd="@+id/txtTitleScreen"
        android:layout_alignStart="@+id/txtTitleScreen"
        android:minHeight="65dp"
        android:minWidth="60dip"
        android:textSize="24sp"
        android:fontFamily="casual"
        android:background="@android:color/holo_blue_bright"
        android:onClick="startScore" />

    <Button
        android:text="Start Puzzle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:id="@+id/btnPlayGame"
        android:layout_below="@+id/txtTitleScreen"
        android:layout_alignStart="@+id/btnTimeScore"
        android:layout_alignEnd="@+id/btnTimeScore"
        android:minHeight="65dp"
        android:textSize="24sp"
        android:fontFamily="casual"
        android:textColorLink="@android:color/holo_blue_bright"
        android:textColor="@android:color/background_dark"
        android:background="@android:color/holo_blue_bright"
        android:onClick="startGame" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/txtVisited"
        android:textColor="@android:color/holo_blue_bright"
        android:typeface="sans"
        android:fontFamily="casual"
        android:textSize="18sp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/btnTimeScore"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
